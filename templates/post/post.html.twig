{% extends 'base.html.twig' %}

{% block title %}Просмотр поста № {{ id }}!{% endblock %}

{% block stylesheets %}
    <style>
        img {
            max-width: 250px !important;
        }
    </style>
{% endblock %}
{% block body %}
<img src="{{ photo }}"><br>
    {{ text }}<br>
    {{ rating }}
    {% if(canVote) %}
    <form action="/post/vote" method="post">
        <select name="type">
            <option value="1">Мне понравилось</option>
            <option value="0">Мне не понравилось</option>
        </select>
        <input type="submit" value="Голосовать!">
        <input type="hidden" name="id" value="{{ id }}">
    </form>
    {% endif %}
{% endblock %}
